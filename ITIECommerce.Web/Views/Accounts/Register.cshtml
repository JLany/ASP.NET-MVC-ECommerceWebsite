@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "_ECommerceLayout";
}

<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <form class="mx-1 mx-md-4" asp-action="Register" method="post">
                  <div asp-validation-summary="ModelOnly"></div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <span asp-validation-for="Email" class="alert-danger"></span>
                      <input asp-for="Email" class="form-control" />
                      <label class="form-label" for="UserName">Your Email</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <span asp-validation-for="Address" class="alert-danger"></span>
                      <input asp-for="Address" class="form-control" />
                      <label class="form-label" for="Address">Address</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <span asp-validation-for="FirstName" class="alert-danger"></span>
                      <input asp-for="FirstName" class="form-control" />
                      <label class="form-label" for="FirstName">First Name</label>
                    </div>
                  </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            <span asp-validation-for="LastName" class="alert-danger"></span>
                            <input asp-for="LastName" class="form-control" />
                            <label class="form-label" for="LastName">Last Name</label>
                        </div>
                    </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <span asp-validation-for="Password" class="alert-danger"></span>
                      <input type="password" asp-for="Password" class="form-control" />
                      <label class="form-label" for="Password">Password</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>
                      <input type="password" asp-for="ConfirmPassword" class="form-control" />
                      <label class="form-label" for="ConfirmPassword">Repeat your password</label>
                    </div>
                  </div>

                  <div class="form-check d-flex justify-content-center mb-5">
                    <input asp-for="SignUpAsSeller" class="form-check-input me-2" />
                    <label class="form-check-label" for="SignUpAsSeller">
                      Sign up as a Seller
                    </label>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg">Register</button>
                  </div>

                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
